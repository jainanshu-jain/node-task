<section class="container my-2 bg-dark w-50 text-light p-2" style="border-radius: 1rem">
    <form id="studentForm" class="row g-4 mt-4 p-3" action="/students/update-student/<%= student_details._id %>" method="POST" onsubmit="handleSubmit(event)">
      <h4 class="m-0">Edit Student</h4>
      <div class="col-12">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter student name" required value="<%= student_details.name %>">
      </div>
  
      <div class="col-12">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control" placeholder="Enter student email" id="email" name="email" required value="<%= student_details.email %>">
      </div>
      <div class="col-12">
        <label for="college" class="form-label">College</label>
        <input type="text" class="form-control" placeholder="Enter student college" id="college" name="college" required value="<%= student_details.college %>">
      </div>
  
      <div class="col-md-6">
        <label for="batch" class="form-label">Batch</label>
        <input type="text" class="form-control" placeholder="Enter student batch" id="batch" name="batch" required value="<%= student_details.batch %>">
      </div>
  
      <div class="col-md-6">
        <label for="status" class="form-label">Placement Status</label>
        <select id="status" name="placement_status" class="form-select" required>
          <option value="placed" <%= student_details.placement_status === 'placed' ? 'selected' : '' %>>Placed</option>
          <option value="not_placed" <%= student_details.placement_status === 'not_placed' ? 'selected' : '' %>>Not Placed</option>
        </select>
      </div>
      <div class="col-md-4">
        <label for="dsaScore" class="form-label">DSA Final Score</label>
        <input type="number" id="dsaScore" class="form-control" name="courseScores.dsaFinalScore" required value="<%= student_details.courseScores.dsaFinalScore %>">
      </div>
      <div class="col-md-4">
        <label for="webDScore" class="form-label">WebD Final Score</label>
        <input type="number" id="webDScore" class="form-control" name="courseScores.webDFinalScore" required value="<%= student_details.courseScores.webDFinalScore %>">
      </div>
      <div class="col-md-4">
        <label for="reactScore" class="form-label">React Final Score</label>
        <input type="number" id="reactScore" class="form-control" name="courseScores.reactFinalScore" required value="<%= student_details.courseScores.reactFinalScore %>">
      </div>
      <div class="text-center py-2">
        <button class="btn btn-primary btn-lg btn-rounded px-4" type="submit">Update Student</button>
      </div>
    </form>
  </section>
  